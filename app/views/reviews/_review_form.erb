<% if current_user %>
	<%= form_for [@product, @review], :remote => true do |f| %>
		<div id="review-errors">
			<%= render :partial => "/products/review_form_errors" %>
		</div>
		<div>
			<p><%= f.label :comment %> <%= f.text_area :comment %></p>
		</div>
		<div>
			<%= f.submit class: 'submit' %>
		</div>
<% end %>


<% else %>
	<p>You have to log in to access creating or editing reviews. <%= link_to "Log In", new_session_path %></p>
<% end %>