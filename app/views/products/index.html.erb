<h1>All Products</h1>

	<%= link_to 'Create a new Product', new_product_path %>

	<%= form_tag products_path, method: 'get', authentication: false, id: 'search-form' do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search" %>
	<% end %>

	<% @products.each do |product| %>
		<p>
			<a href="/products/<%= product.id %>">
				<%= "#{product.id}, #{product.name}, #{product.description}, $#{product.cents_to_dollars}, #{product.price_in_cents}" %>
			</a>
		</p>
	<% end %>

